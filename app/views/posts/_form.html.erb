
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>


<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.text_field :caption, placeholder: "caption" %>
  </div>
  <br>
  <div>
    <% if @post.image.attached? %>
      <div>
        <% if @post.image.image? %>
            <%= image_tag(@post.image,height:400,width:400) %>
        <% elsif @post.image.video? %>
            <div>
                <%= video_tag(url_for(@post.image), controls: "", class:"video") %>
            </div>
        <% end %>
    </div>
    <% end %>
    <div><%= form.file_field :image %></div><br>
  </div>


  <div>
    <%= form.submit %>
  </div>
<% end %>
</html>
